{{ form_start(form) }}
<div class="my-custom-class-for-errors">
	{{ form_errors(form) }}
</div>
<div class="container">
	<div class="wrapper wrapper--w680">
		<div class="container">
			<div class="card-body">
				<div class="row row-space">
					<div class="col-2">
						<div class="input-group">
							{{ form_row(form.name) }}
						</div>
						<div class="input-group">
							{{ form_row(form.description) }}
						</div>
						<div class="input-group">
							{{ form_row(form.price) }}
						</div>
						<div class="input-group">
							{{ form_row(form.stock) }}
						</div>
						<div>
							{{ form_row(form.image) }}
						</div>
						<div class="btn-toolbar">
							<button class="btn btn-danger mt-3  mb-3">{{ button_label|default('Save') }}</button>
							

						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
	{{ form_end(form) }}
