<!-- header -->
<header>
    <!-- header section start -->
        <div class="header_section">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="logo"><a href="#"><img src="{{ asset("images/logo.png ") }}"></a></div>
                    </div>
                    <div class="col-sm-9">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                                <div class="navbar-nav">
                                    <a class="nav-item nav-link" href="#">{{'home'|trans }}</a>
									<a class="nav-item nav-link" href="{{ path('product_index') }}">
										{{'product.title'|trans }}</a>
									<a class="nav-item nav-link" href="{{ path('admin_products') }}">
										{{'admin'|trans }}</a>
                                    <a class="nav-item nav-link" href="#"> {{'contact'|trans }} </a>
                                    <a class="nav-item nav-link last" href="#"><i class="fa fa-shopping-cart text-white"> {{'cart.title'|trans }}</i></a>
                                    {% if app.user is not null %}
                                        <a class="nav-item nav-link last" href="{{ path('app_profil') }}" title="{{ 'user.profil.title'|trans }}">{{ 'user.profil.title'|trans }}</a>
                                        <a class="nav-item nav-link last" href="{{ path('app_logout') }}" title="{{ 'user.signout'|trans }}">{{ 'user.signout'|trans }}</a>
                                    {% else %}
                                        <a class="nav-item nav-link last" href="{{ path('app_login') }}" title="{{ 'user.signin'|trans }}">{{'user.signin'|trans }}</a>
                                        <a class="nav-item nav-link last" href="{{ path('app_register') }}" title="{{ 'user.signup'|trans }}">{{ 'user.signup'|trans }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
		</div>
	<!-- header section end -->
</header>
<!-- end header -->
