{% extends 'base.html.twig' %}

{% block title %}
	{% if app.request.requesturi|slice(1, 2) == 'en' %}
		Error 500
	{% else %}
		Erreur 500
	{% endif %}
{% endblock %}

{% block body %}
	{% if app.request.requesturi|slice(1, 2) == 'en' %}
		<div class="collection_text">INTERNAL SERVER ERROR</div>
		<div class="collection_section layout_padding ">
			<div id="notfound">
				<div class="notfound ">
					<div class="notfound-404 ">
						<h1>
							<strong>500</strong>
						</h1>
					</div>
					<h2>
						<strong>
							INTERNAL SERVER ERROR
						</strong>
					</h2>
					<p>
						<strong>Sorry, something went wrong on our end. We are currently trying to fix the problem.</strong>
					</p>
				</div>
			</div>
			<div class='container mb-5'>
				<a class='btn btn-success btn-lg btn-block' href="{{ path('home') }}" title="Home">Home</a>
			</div>
		</div>
	{% else %}
		<div class="collection_text">ERREUR DU SERVEUR</div>
		<div class="collection_section layout_padding ">
			<div id="notfound">
				<div class="notfound ">
					<div class="notfound-404 ">
						<h1>
							<strong>500</strong>
						</h1>
					</div>
					<h2>
						<strong>ERREUR DU SERVEUR</strong>
					</h2>
					<p>
						<strong>Désole, nous avons rencontrons un ou plusieurs soucis.Nous sommes actuellement entrain de résoudre le/les problème(s).</strong>
					</p>
				</div>
			</div>
			<div class='container mb-5'>
				<a class='btn btn-success btn-lg btn-block' href="{{ path('home') }}" title="Accueil">Accueil</a>
			</div>
		</div>
	{% endif %}


{% endblock %}
