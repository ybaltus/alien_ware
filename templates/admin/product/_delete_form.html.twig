<form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('{{'product.submitDelete'|trans}}');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
	<button class="btn btn-danger ml-1">
		<i class="fa fa-times"></i>
	</button>
</form>
