{% extends 'base.html.twig' %}

{% block title %}{{ 'cart.content.title'|trans }}{% endblock %}

{% block body %}
    <div class="collection_text">{{ 'cart.content.title'|trans }}</div>
    <div class="collection_section layout_padding">
        <div class="container">
            {% if app.user is not null %}
                <div class="row">
                    <div class="col-12">
                        {% for type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
                <div style="width:100%;height:0;padding-bottom:45%;position:relative;">
                    <iframe src="https://giphy.com/embed/MOWPkhRAUbR7i" width="100%" height="100%"
                            style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
                </div>
                <table class="table m-5">
                    <thead class="text-center">
                    <tr>
                        <th>{{ 'cart.content.name'|trans }}</th>
                        <th>{{ 'cart.content.quantity'|trans }}</th>
                        <th>{{ 'cart.content.price'|trans }}€</th>
                        <th>{{ 'cart.content.purchaseAt'|trans }}</th>
                        <th>{{ 'cart.state'|trans }}</th>
                        <th>{{ 'cart.content.total'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody class="text-center">
                    {% for content in cart.cartContents %}
                        <tr>
                            <td>{{ content.product }}</td>
                            <td>{{ content.quantity }}</td>
                            <td>{{ content.product.price }} €</td>
                            <td>{{ content.cart.purchaseAt |date("d/m/Y") }}</td>
                            {% if content.cart.state %}
                                <td>PAYÉ</td>
                            {% endif %}
                            <td>{{ content.total }} €</td>
                        </tr>
                    {% endfor %}
                    <tfoot>
                    <tr>
                        <td colspan="5"><strong>Total</strong></td>
                        <td class="text-center">{{ cart.total }} €</td>
                    </tr>
                    </tfoot>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-12 m-5">
                        <a href="{{ path('home') }}" class="col-md-12 btn btn-primary">Revenir à l'accueil</a>
                    </div>
                </div>
            {% else %}
                <div class="row">
                    <div class="col-md-12 m-5">
                        <h1 colspan="4" class="text-center col-md-12">Veuillez vous connectez pour voir vos produits sur
                            le panier</h1>
                        <a href="{{ path('app_register') }}" class="col-md-12 btn btn-primary">Connexion</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
