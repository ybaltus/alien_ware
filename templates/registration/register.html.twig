{% extends 'base.html.twig' %}

{% block title %}{{ 'user.signup'|trans }}{% endblock %}

{% block body %}
    <div class="collection_text">{{ 'user.signup'|trans }}</div>
    <!-- breadcrumb end  -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}" title="{{ 'home'|trans }}">{{ 'home'|trans }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ 'user.signup'|trans }}</li>
        </ol>
    </nav>
    <!-- breadcrumb end -->
    <div class="layout_padding contact_section">
        <div class="container">
            <h1 class="new_text"><strong>{{ 'user.signup'|trans }}</strong></h1>
        </div>
        <div class="container-fluid ram">
            <div class="row">
                <div class="col-md-6">
                    <div class="email_box">
                        <div class="input_main">
                            <div class="container">
                                {{ form_start(registrationForm) }}
                                <div class="form-group">
                                    {{ form_errors(registrationForm.firstname) }}
                                    {{ form_widget(registrationForm.firstname, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(registrationForm.lastname) }}
                                    {{ form_widget(registrationForm.lastname, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(registrationForm.email) }}
                                    {{ form_widget(registrationForm.email, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(registrationForm.plainPassword) }}
                                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(registrationForm.agreeTerms) }}
                                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'email-bt'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_errors(registrationForm.roles) }}
                                    {{ form_label(registrationForm.roles) }}
                                    {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="send_btn">
                                    <button class="main_bt" type="submit" title="{{ 'user.form.create'|trans }}">{{ 'user.form.create'|trans }}</button>
                                </div>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-center">
                    <img src="{{ asset('images/monaka/monaka2.png') }}" style="height: 600px"/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


